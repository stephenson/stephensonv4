<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= current_page.data.title || "Niklas Stephenson" %></title>
    <meta name="description" content="<%= current_page.data.description || "I start and build companies, love great products and adventures on my motorcycle. Focus on enjoying life while never settling with the present." %>">
    <meta property="og:title" content="<%= current_page.data.title || "Niklas Stephenson" %>">
    <meta property="og:description" content="<%= current_page.data.description %>">
    <meta property="og:image" content="<%= config[:host] %><%= image_path 'social-share.png' %>">
    <meta property="og:url" content="<%= config[:host] %><%= current_page.url %>">
    <meta property="og:site_name" content="Niklas Stephenson">
    <meta name="twitter:title" content="<%= current_page.data.title || "Niklas Stephenson" %>">
    <meta name="twitter:description" content="<%= current_page.data.description %>">
    <meta name="twitter:image" content="<%= config[:host] %><%= image_path 'social-share.png' %>">
    <meta name="twitter:card" content="summary_large_image">
    <%= stylesheet_link_tag "site" %>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script type="text/javascript" async src="https://www.googletagmanager.com/gtag/js?id=UA-43333192-1"></script>
    <script type="text/javascript">
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-43333192-1');
    </script>
  </head>

  <body class="<%= current_page.data.bodyclass || "" %>">
    <%= yield %>
  </body>
</html>
